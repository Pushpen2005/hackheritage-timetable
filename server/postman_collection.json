        "body": {"mode": "raw", "raw": "{\n  \"user\": \"<user_id>\",\n  \"date\": \"2025-08-16\",\n  \"method\": \"qr\",\n  \"status\": \"present\"\n}"}
      }
    },
    {
      "name": "Get Attendance",
      "request": {
        "method": "GET",
